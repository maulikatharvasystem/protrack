<%= form_for @device_user, :url =>  {:action => "update", :id =>  @device_user.id} do |f| %>
	
	<% if @device_user.errors.full_messages.length >0 %>			
	<div class="error">
		<% @device_user.errors.full_messages.each do |msg| %>		
				<p><%= msg %></p>	
		<% end %>
	</div>
	<% end %>
	
	<fieldset>
		<legend><%= t :EditDeviceUser %></legend>		
		
		<label><%= t :FirstName %>: </label>
		<%= f.text_field :first_name, :class => "narrow", :style => "width:30% !important;"  %>
		<br />
			
		<label><%= t :LastName %>: </label>
		<%= f.text_field :last_name, :class => "narrow", :style => "width:30% !important;"  %>		
		<br />
		
		<label><%= t :Email %>: </label>
		<%= f.text_field :email, :class => "narrow", :style => "width:30% !important;", :disabled => true  %>		
		<br />

		<label><%= t :Password %>: </label>
		<%= f.password_field :password, :class => "narrow", value: "", :style => "width:20% !important;"  %>		
		(Leave it blank for no change in password.)		
		<br /> 
		
		<label><%= t :ConfirmPassword %>: </label>
		<%= f.password_field :confirm_password, :class => "narrow", value: "", :style => "width:20% !important;"  %>		
		(Leave it blank for no change in password.)		
		<br />						

		<label><%= t :Phone %>: </label>
		<%= f.text_field :phone, :class => "narrow", :style => "width:20% !important;"  %>		
		<br />
		
		<label><%= t :Address %>: </label>
		<%= f.text_area :address, :class => "narrow", :style => "width:30% !important;", :rows => 3   %>		
		<br />
				
		<label><%= t :LastModified %>: </label>
		<%= f.text_field :last_updated_at, :value => "#{@device_user.last_updated_at.strftime("%m-%d-%Y %H:%M:%S")}", :class => "narrow", :style => "width:20% !important;", :disabled => true  %>
		<br />	
				
		<label ></label>	
		<%= submit_tag t('Save'), :value => t('Save'), :class => "green processing" %>					
		<input type="reset" class="gray"  value="<%= t :Reset %>" id="reset_form" tabindex="5" />
				
		<a href="<%= url_for :action => "index_flash_clear" %>" tooltip="<%= t :Index %>" >
			<input type="button"  class="red processing"  value="<%= t :Cancel %>" id="cancel_client" tabindex="5" />
		</a>
		
	</fieldset>

<% end %>

 <script type="text/javascript">
$(document).ready(function() {	
	$('.processing').click(function(){
		 $("#middlepart").mask("Processing...");	
	 });

});
 </script>